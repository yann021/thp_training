<div class="jumbotron">
  <h1 class="display-4"><%= @user.first_name%> <%= @user.last_name%></h1>
  <p class="lead">Page de modification de mes informations</p>
  <p class="lead"><%= link_to "Annuler les modifications", user_path(@user.id) %></p>
</div>

<div class="container d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h2>Les infos de <%=@user.first_name %> <%=@user.last_name %></h2>
		</div>
		<div class="col-sm-12 d-flex justify-content-center">
			<%= form_for @user do |f| %>
				
				<div class="form-group" style="width:500px">
					 <%= label_tag(:first_name, "First name:") %>
					<%= f.text_field :first_name, class: "form-control"%>
				</div>
				<div class="form-group" style="width:500px">
					 <%= label_tag(:last_name, "Last name:") %>
					<%= f.text_field :last_name, class: "form-control"%>
				</div>
				<div class="form-group" style="width:500px">
					 <%= label_tag(:email, "Email:") %>
					<%= f.email_field :email, class: "form-control"%>
				</div>
				<div class="form-group">
					<%= label_tag(:description, "Description:") %>
					<%= f.text_area :description, class: "form-control"%>
				</div>

				<div class="col-sm-12 d-flex justify-content-center  m-3">
					<%= f.submit "Mettre Ã  jour le profil", class: "btn btn-primary"%>
				</div>
			<% end %>
		</div>
	</div>
</div>
