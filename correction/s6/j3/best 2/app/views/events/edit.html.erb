<div class="jumbotron">
  <h1 class="display-4">Edition de l'évènement "<%= @event.title%>"</h1>
  <p class="lead"> > <%= @event.description%></p>
  <p class="lead"><%= link_to "Revenir à la fiche de l'évènement", event_path(@event.id) %></p>
</div>


<div class="container m-3 d-flex justify-content-center col-sm-12">
	<%= form_for @event do |f| %>
		
		<div class="form-group" style="width:500px">
			<%= label_tag(:title, "Titre:") %>
			<%= f.text_field :title, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= label_tag(:description, "Description:") %>
			<%= f.text_area :description, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= label_tag(:location, "Localisation:") %>
			<%= f.text_field :location, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= label_tag(:price, "Prix:") %>
			<%= f.text_field :price, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= label_tag(:start_date, "Début:") %>
			<%= f.text_field :start_date, class: "form-control"%>
		</div>

		<div class="form-group">
			<%= label_tag(:duration, "Durée:") %>
			<%= f.text_field :duration, class: "form-control"%>
		</div>

		<div class="col-sm-12 d-flex justify-content-center  m-3">
			<%= f.submit "Mettre à jour l'évènement", class: "btn btn-primary"%>
		</div>
	<% end %>
</div>
