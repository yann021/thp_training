<div class="container-fluid">
	<div class="card text-center mt-3">
	  <div class="card-header">
	    <h1>Espace de <%= @user.first_name %> <%= @user.last_name %></h1>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title">Description : <span class="font-italic"><%= @user.description %></span></h5>
	    <p class="card-text"><%= @user.first_name %> a <%= @user.age %> ans et habite <%= @user.city.name %>. Contactez cet auteur Ã  l'adresse email suivante : <%= @user.email %></p>
	  </div>
	</div>


	<div class="row mt-3">
		<% @user.gossips.each do |gossip| %>
			<div class="card mx-auto mb-5" style="width: 30rem;">
			  	<div class="card-body">
			    <h5 class="card-title"><%= gossip.title %></h5>
			    <p class="card-text"><%= gossip.content %></p>
				</div>
			</div>
		<% end %>
	</div>

</div>