  <div class="card-header d-flex justify-content-center">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <a class="nav-link" href="<%= edit_gossip_path(gossip.id)%>">Edit</a>
          </p>
      </li>
      <li class="nav-item">
        
