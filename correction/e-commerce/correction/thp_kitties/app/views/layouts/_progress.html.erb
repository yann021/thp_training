
<% if user_signed_in? %>
  <% if @progress_status < 100 %>
    <div class="progress-wrapper mt-0 pt-0">
        <div class="progress mb-0" style="height: 30px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: <%= @progress_status %>%;" aria-valuenow="<%= @progress_status %>" aria-valuemin="0" aria-valuemax="100">
              <%= link_to edit_user_path(current_user.id) do  %>
              Profile completed at <strong><%= @progress_status %>%</strong>
              <% end %>
            </div>
        </div>
    </div>
  <% end %>
<% end %>


