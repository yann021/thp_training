<%flash.each do |name,msg|%>
    <% name = "success" if name == "notice" %>
    <% name = "danger" if name == "alert" %>

    <div id="flash-alert" class="alert alert-<%=name%> alert-dismissible   mb-0" role="alert">
        <h4>Alert</h4>
        <p><%= raw(msg)%></p>
        <button id="alert-btn" type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>
