<%= render "admins/admin/admin_page" %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Email</th>
        <th scope="col" class="text-center"><i class="fas fa-sort ml-2"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
          <tr>
            <% if user.try(:admin?) %>
              <td style="color:red">Admin</td>
            <% else %>
              <td> <%= user.id %></td>
            <% end %>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td  class="text-center">
              <a class="text-decoration-none" href="<%= admins_user_path(user.id)%>"><i class="far fa-eye"></i></a>
            </td>
          </tr>
      <% end %>

    </tbody>
  </table>
</div>
