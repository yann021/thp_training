		<div class="banner_inner d-flex align-items-center">
			<div class="container">
				<div class="banner_content text-center">
					<h2>Login/Register</h2>
					<div class="page_link">
						<a href="index.html">Home</a>
						<a href="registration.html">Register</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--================End Home Banner Area =================-->

	<!--================Login Box Area =================-->
	<section class="login_box_area p_120">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
					  <%= image_tag("login.jpg", :class => "img-fluid") %>
						<div class="hover">
							<h4>Already have an account?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
							<a class="main_btn" href="#">Log In</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner reg_form">
						<h3>Create an Account</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class=>"row login_form", :id=>"contactForm") do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

							<div class="col-md-12 form-group">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autofocus: true, autocomplete: "Surname", :class=>"form-control", :id=>"name" %>
              </div>
            <div class="col-md-12 form-group">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "Name", :class=>"form-control", :id=>"name" %>
              </div>

              <div class="col-md-12 form-group">
                <%= f.label :numero_telephone %><br />
                <%= f.text_field :numero_telephone, autocomplete: "numero", :class=>"form-control", :id=>"name" %>
              </div>

              <div class="col-md-12 form-group">
                <%= f.label :adresse %><br />
                <%= f.text_field :adresse, autocomplete: "adresse", :class=>"form-control", :id=>"name" %>
              </div>


							<div class="col-md-12 form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control", :id=>"email" %>
              </div>


              <div class="col-md-12 form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", :class=>"form-control", :id=>"password" %>
              </div>



              <div class="col-md-12 form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"form-control", :id=>"pass" %>
              </div>





                <div class="col-md-12 form-group">
                  <%= f.submit "Sign up", :class=>"btn submit_btn" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>

					</div>
				</div>
			</div>
		</div>
	</section>
	
